{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Structures Export",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "name",
      "type",
      "purpose",
      "requirements",
      "enabled_actions",
      "required_tech",
      "notes",
      "stats",
      "upgrade_path"
    ],
    "properties": {
      "id": {"type": "string", "pattern": "^STR-\\d{3}$"},
      "name": {"type": "string"},
      "type": {"type": "string"},
      "purpose": {"type": "string"},
      "requirements": {"type": "array", "items": {"type": "string"}},
      "enabled_actions": {"type": "array", "items": {"type": "string"}},
      "required_tech": {"type": "array", "items": {"type": "string"}},
      "notes": {"type": "string"},
      "stats": {
        "type": "object",
        "properties": {
          "delta": {"type": "boolean"},
          "bo": {"type": "number"},
          "pop": {"type": "number"},
          "l": {"type": "number"},
          "em": {"type": "number"},
          "r": {"type": "number"},
          "qt": {"type": "number"},
          "cap": {"type": "number"},
          "up": {"type": "number"},
          "tags": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": false
      },
      "upgrade_path": {"type": "array", "items": {"type": "string"}}
    },
    "additionalProperties": false
  }
}
