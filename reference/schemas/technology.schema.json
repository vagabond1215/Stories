{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Technology Graph Export",
  "type": "object",
  "required": ["nodes", "prerequisite_edges", "unlock_edges"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "tier", "prerequisites", "unlocks", "time_cost", "notes"],
        "properties": {
          "id": {"type": "string", "pattern": "^TEC-\\d{3}$"},
          "name": {"type": "string"},
          "tier": {"type": ["integer", "string"]},
          "prerequisites": {"type": "array", "items": {"type": "string"}},
          "unlocks": {"type": "array", "items": {"type": "string"}},
          "time_cost": {"type": "string"},
          "notes": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "prerequisite_edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {"type": "string"},
          "to": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "unlock_edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {"type": "string"},
          "to": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
