{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "District System Export",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["key", "name", "qualifying_tags", "min_buildings", "radius", "bonuses", "penalties", "notable_adjacency_pairs"],
    "properties": {
      "key": {"type": "string"},
      "name": {"type": "string"},
      "qualifying_tags": {"type": "array", "items": {"type": "string"}},
      "min_buildings": {"type": "integer"},
      "radius": {"type": "integer"},
      "bonuses": {"type": "string"},
      "penalties": {"type": "string"},
      "notable_adjacency_pairs": {"type": "string"}
    },
    "additionalProperties": false
  }
}
