{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Systems Events",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["key", "name", "category", "base_chance", "triggers", "effects", "mitigation"],
    "properties": {
      "key": {"type": "string"},
      "name": {"type": "string"},
      "category": {"type": "string"},
      "base_chance": {"type": "number"},
      "triggers": {"type": "array", "items": {"type": "string"}},
      "effects": {"type": "array", "items": {"type": "string"}},
      "mitigation": {"type": "array", "items": {"type": "string"}}
    }
  }
}
